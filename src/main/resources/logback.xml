<configuration>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- Timestamp in default color, level+message colored -->
            <pattern>%d{HH:mm:ss.SSS} %highlight(%-5level) %highlight(%logger{15} - %msg%n)</pattern>
        </encoder>
    </appender>

    <root level="DEBUG">
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>